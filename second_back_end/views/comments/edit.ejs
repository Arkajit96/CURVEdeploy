<% include ../partials/header %>
    <div class="container">
        <h1 class="newBlog-header">Edit Comment</h1>
        <div class="row">
            <div class="newBlog-div">
                <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/blogs">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>

