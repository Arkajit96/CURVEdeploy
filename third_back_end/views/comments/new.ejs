<% include ../partials/header %>
<div class="container">
    <h1 class="newBlog-header">Add New Comment to <%= blog.name %></h1>
    <div class="row">
        <div class="newBlog-div">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="text" style="height: 100px;"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogs/<%= blog._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

