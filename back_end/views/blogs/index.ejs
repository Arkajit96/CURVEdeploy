<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Travel Blog!</h1>
             <p>View our hand-picked travel places from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/blogs/new">Add New Blog</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= blog.image %>">
                   <div class="caption">
                       <h4><%= blog.name %></h4>
                   </div>
                   <p>
                       <a href="/blogs/<%= blog._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
